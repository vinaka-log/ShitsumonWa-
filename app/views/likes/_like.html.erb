<div class="like-link" id="like-link-<%= question.id %>">
  <% if current_user && current_user.likes.find_by(question_id: question.id) %>
    <%= link_to unlike_path(question.id), method: :delete, remote: true do %>
      <div class = "like-button-on"><i class="far fa-thumbs-up fa-spin faa-vertical animated"></i>
        <%= question.likes.count %></div>
    <% end %>
  <% else %>
    <%= link_to like_path(question.id), method: :post, remote: true do %>
      <div class = "like-button-off"><i class="far fa-thumbs-up fa-spin faa-vertical animated"></i>
        <%= question.likes.count %></div>
    <% end %>
  <% end %>
</div>
