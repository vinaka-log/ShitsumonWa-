<div class="question-index-wrapper">
  <div class="container">
    <% @like_questions.each do |question| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="question-index-single">
            <h2 class="question-author">
              <%= question.user.name %>
            </h2>
            <%= image_tag question.image.url %>
            <p class="question-text">
              <%= question.description %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

