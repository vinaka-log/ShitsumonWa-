<div class="top-video-wrapper text-center">
  <div class= "video-container">
    <%= video_tag("/videos/top-video.mp4", autoplay: :true, loop: :true, muted: :true, class: 'video-content') %>
    <div class="video-message">
      <h1 class="text-white top-text">ShitsumonWa?</h1>
      <p class="text-white">Let's solve questions about Japan.</p>
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <%= link_to 'Sign up', signup_path, class: 'btn btn-block btn-success btn-lg' %>
        </div>
        <div class="col-md-offset-3 col-md-6">
          <%= link_to 'Log in', login_path ,class: 'btn btn-block btn-info btn-lg' %>
        </div>
      </div>
    <div>
  </div>
</div>