<div class="password-reset-wrapper text-center">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 password-reset-form">
        <h2>Choose a new password</h2>
        <%= form_with model: @user, url: password_reset_path, method: :put do |form| %>
          <div class="form-group">
            <%= form.label :password, class: 'form-control' %><br />
            <%= form.password_field :password, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :password_confirmation, class: 'form-control' %><br />
            <%= form.password_field :password_confirmation, class: 'form-control' %>
          </div>
          <%= form.submit 'Update', class:'btn-block btn-success btn-lg' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
