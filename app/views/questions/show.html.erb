
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="question-index-single">
        <h2 class="question-title">
        <%=  @question.name %>
        </h2>
        <%= image_tag @question.image.url %>
        <p class="question-text">
          <%= @question.description %>
        </p>
        <div>
        <%= link_to 'Update',edit_question_path, class: 'btn btn-success' %>
        <%= link_to 'Delete',@question, method: :delete,  class: 'btn btn-danger' %>
        </div>
        
      </div>
    </div>
  </div>
</div>