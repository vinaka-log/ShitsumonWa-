<div class="show-question-wrapper ">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="question-index-single">
          <h1 class="question-title">
          <%=  @question.name %>
          </h1>
          <%= link_to @user.name, user_path %>
          <%= image_tag @question.image.url, class: "question-image" %>
          <p class="question-text">
            <%= @question.description %>
          </p>
          
          <div>
          <%= link_to 'Update',edit_question_path, class: 'btn btn-success ' %>
          <%= link_to 'Delete',@question, method: :delete,  class: 'btn btn-danger' %>
          </div>

          <p class="mt-5">コメント一覧</p>
          <% @comments.each do |c| %>
            <div>
              <% if c.user.present? %>
                <a href="<%= user_path(c.user_id) %>"><%= image_tag c.user.image.to_s,
                  class:"rounded-circle icon_image mr-3 mb-3"%></a>
              <% end %>
              <%= c.user.name unless c.user.blank? %>
              <br />
               <%= c.content %>
            </div>
            <br />
          <% end %>
          
        </div>
      </div>
    </div>
  </div>
</div>
