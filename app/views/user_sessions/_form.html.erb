
 <div class="form-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 form-container">
        <h1 class="text-center text-white">Log in</h1>
        <%= form_with url:user_sessions_path, local: true do |form| %>

          <div class="form-group">
            <%= form.label :email, 'E-mail Address', class: 'form-control' %>
            <%= form.text_field :email, placeholder: "The email address you usually use", size: "50x30" %>
          </div>

          <div class="form-group">
            <%= form.label :password, 'Password', class: 'form-control' %>
            <%= form.password_field :password, placeholder: "The email address you usually use", size: "50x30"%>
          </div>

          <div>
            <%= check_box_tag :remember, params[:remember], true %>
            <%= label_tag :remember %>
          </div>
          <p>Forgot Password?</p>
          # <%# render 'forgot_password_form' %>
          
          <%= form.submit "Log in", class:'btn-block btn-success btn-lg' %>
        
        <% end %>
      </div>
    </div>
  </div>
</div>

