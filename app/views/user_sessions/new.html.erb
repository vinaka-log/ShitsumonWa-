<div class="login-wrapper">
  <div class="container">
    <div class="login-form text-center">
      <h2 class="text-center text-white">Log in</h2>
      <%= link_to auth_at_provider_path(provider: :twitter), class:'link_login  btn btn-block btn-info' do %>
        <i class="fab fa-twitter"></i>  Log in with Twitter
      <% end %>
      <%= link_to auth_at_provider_path(provider: :facebook), class:'link_login btn btn-block btn-primary' do %>
        <i class="fab fa-facebook"></i> Log in with Facebook
      <% end %>
      <div class = "login-form">
        <%= form_with url:login_pending_path, local: true do |form|%>
          <div class="form-group">
            <%= form.label :email, 'E-mail', class: 'form-control' %>
            <%= form.text_field :email, placeholder: "Required", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.label :password, 'Password', class: 'form-control' %>
            <%= form.password_field :password, placeholder: "Required", class: "form-control"%>
          </div>
          <div>
            <%= check_box_tag :remember, params[:remember], true %>
            <%= label_tag :remember %>
          </div>
          <div class = "login-btn">
            <%= form.submit "Log in", class:' btn-block btn-success btn-lg' %>
          </div>
        <% end %>
      </div>
      <div class = "reset-password">
        <p>Forgot Password?</p>
        <%= render 'forgot_password_form' %>
      </div>
      <div class = "link_signup">
      <p> Click here if you have not registered </p>
      <%= link_to 'Sign up',signup_path, class:'link_login btn-block btn btn-warning' %>
      </div>
    </div>
  </div>
</div>
