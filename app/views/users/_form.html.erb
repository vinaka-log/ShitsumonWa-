

<%= form_with model: @user, url: users_path,local: true do |form| %>
  
  <div class="form-group">
    <%= form.label :name, 'User Name', class: 'form-control' %>
    <%= form.text_field :name %>
  </div>
  <div class="form-group">
    <%= form.label :email, 'E-mail Address', class: 'form-control' %>
    <%= form.text_field :email %>
  </div>
  <div class="form-group">
    <%= form.label :nationality, 'Country', class: 'form-control' %>
    <%= form.text_field :nationality %>
  </div>
    <div class="form-group">
    <%= form.label :password, 'Password', class: 'form-control' %>
    <%= form.password_field :password %>
  </div>
  <div class="form-group">
    <%= form.label :password_confirmation, 'Password Confirmation', class: 'form-control' %>
    <%= form.password_field :password_confirmation %>
  </div>
  
  <%= form.submit 'Register', class:'btn-block btn-success btn-lg' %>
<% end %>