<div class="user-edit-wrapper">
  <div class="container">
    <div class="left-contents">
      <div class="card-contents">
        <h2 class="text-title">Your image</h2>
        <div class="col-sm-6">
            <%= render 'stats' %>
            <% if @user.image? %>
              <%= image_tag @user.image.url, class: 'profile-image' %>
            <% else %>
              <%= image_tag '/assets/default_user.jpg', class: 'profile-image' %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="right-contents">
      <div class="card-contents">
        <h2 class="text-title">Update your profile</h2>
        <div class="col-sm-6 user_container">
        
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>