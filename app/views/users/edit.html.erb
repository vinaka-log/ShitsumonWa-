<div class="user-edit-wrapper">
  <div class="container">
    <div class="left-contents">
      <div class="card-contents">
        <h2 class="text-title">Your image</h2>
        <div class="col-sm-6">
          <%= render 'follow_form' %>
            <%= render 'stats' %>
            <% if @user.image? %>
              <%= image_tag @user.image.url, class: 'profile-image' %>
            <% else %>
              <%= image_tag '/assets/default_user.jpg', class: 'profile-image' %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="right-contents">
      <div class="card-contents text-center">
        <h2 class="text-title">Update your profile</h2>
        <div class="col-sm-6 user_container">
        <%= form_with model: @user, local: true do |form| %>
          <div class="form-group">
            <p> your image </p>
            <%= form.file_field :image %>
          </div>
          <div class="form-group">
            <p> your name </p>
            <%= form.text_field :name %>
          </div>
          <%= form.submit 'Update', class:'btn-block btn-success btn-lg' %> 
        <% end %>
      </div>
    </div>
  </div>
</div>