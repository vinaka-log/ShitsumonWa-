<div class="signup-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 signup-container">
        <h1 class="text-center text-white ">Sign up</h1>
        <%= link_to '/signup/registration',class: 'link_signup btn-block btn btn-warning' do %> 
          <i class="fa fa-envelope"></i>  Sign up with E-mail
        <% end %>
        <%= link_to auth_at_provider_path(provider: :twitter), class:'link_signup btn-block btn btn-info' do %>
          <i class="fab fa-twitter"></i>  Sign up with Twitter
        <% end %>
        <%= link_to auth_at_provider_path(provider: :slack), class:'link_signup btn-block btn btn-danger' do %>
          <i class="fab fa-slack"></i> Sign up with Slack
        <% end %>
        <%= link_to 'Login', 'login',class: 'link_login' %> 
      </div>
    </div>
  </div>
</div>






