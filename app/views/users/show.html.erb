<div class="signup-wrapper">
  <div class="container">
    <div class="row">
      <div class=" signup-container col-12 text-center">
        <h1 class="text-center text-white ">Your profile</h1>
        <%= form_with model: @user, local: true do |form| %>

          <div class="form-group">
          <%= form.label :image, 'プロフィール画像' %>
          <%= form.file_field :image %>
          </div>
          <div class="form-group">
            <%= form.label :name, 'User Name', class: 'form-control' %>
            <%= form.text_field :name %>
          </div>
          <div class="form-group">
            <%= form.label :email, 'E-mail Address', class: 'form-control' %>
            <%= form.text_field :email %>
          </div>
          <div class="form-group">
            <%= form.label :nationality, 'Country', class: 'form-control' %>
            <%= form.text_field  :nationality %>
          </div>
            <div class="form-group">
            <%= form.label :password, 'Password', class: 'form-control' %>
            <%= form.password_field :password %>
          </div>
          <div class="form-group">
            <%= form.label :password_confirmation, 'Password Confirmation', class: 'form-control' %>
            <%= form.password_field :password_confirmation %>
          </div>
          
          <%= form.submit "Update", class:'btn-block btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
